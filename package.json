{
  "name": "drop",
  "version": "0.0.1-alpha.8",
  "description": "Color-Picker Tool built on Electron",
  "main": "src/main/main.js",
  "scripts": {
    "start": "./node_modules/.bin/electron .",
    "lint": "./node_modules/.bin/eslint -c .eslintrc.json --fix .",
    "test": "mocha",
    "build": "electron-builder build --publish never",
    "release": "electron-builder build --publish always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test",
      "pre-push": "npm run lint && npm test"
    }
  },
  "build": {
    "appId": "com.electron.drop",
    "productName": "Drop",
    "copyright": "Copyright Â© 2020 Lennart Hase",
    "asar": true,
    "afterPack": ".after-pack-hook.js",
    "win": {
      "icon": "./src/assets/img/icon.ico",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "icon": "./src/assets/img/icon@512x512.png",
      "category": "Utility",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/motorlatitude/Drop.git"
  },
  "author": "Lennart Hase",
  "license": "GNU GPL V3.0",
  "keywords": [
    "electron",
    "color-picker"
  ],
  "bugs": {
    "url": "https://github.com/motorlatitude/Drop/issues"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "electron": "^7.3.2",
    "electron-builder": "^22.7.0",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-mocha": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-security-node": "^1.0.12",
    "execa": "^4.0.3",
    "husky": "^4.2.5",
    "mocha": "^7.2.0",
    "prettier": "^1.19.1",
    "spectron": "^9.0.0"
  },
  "dependencies": {
    "@sentry/electron": "^1.3.1",
    "codeflask": "^1.4.1",
    "color-namer": "^1.4.0",
    "dotenv": "^8.2.0",
    "electron-log": "^4.2.2",
    "electron-store": "^5.2.0",
    "electron-updater": "^4.3.1",
    "glob": "^7.1.6",
    "moment": "^2.27.0",
    "mousetrap": "^1.6.5",
    "require-from-string": "^2.0.2",
    "robotjs": "^0.6.0",
    "svg2png": "^4.1.1"
  }
}
